<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Summary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Wellness Overview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:text="Wellness Overview"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <!-- three circular indicators row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="space_between"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/cpbHydration"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:progress="0"
                            app:progressMax="100"/>

                        <TextView
                            android:id="@+id/tvHydLabel"
                            android:layout_marginTop="6dp"
                            android:text="Hydration"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/cpbFatigue"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:progress="0"
                            app:progressMax="100"/>

                        <TextView
                            android:id="@+id/tvFatLabel"
                            android:layout_marginTop="6dp"
                            android:text="Fatigue"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/cpbStress"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:progress="0"
                            app:progressMax="100"/>

                        <TextView
                            android:id="@+id/tvStressLabel"
                            android:layout_marginTop="6dp"
                            android:text="Stress"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOverallStatus"
                    android:layout_marginTop="8dp"
                    android:text="Overall Status: Unknown"
                    android:textColor="#05A88C"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Fatigue Prediction Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Fatigue Prediction (Next 12 Hours)"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPredictionSummary"
                    android:layout_marginTop="8dp"
                    android:text="Low fatigue expected"/>

                <!-- confidence and simple slider -->
                <TextView
                    android:id="@+id/tvConfidence"
                    android:layout_marginTop="6dp"
                    android:text="85% Confidence"
                    android:textColor="#05A88C"/>

                <SeekBar
                    android:id="@+id/seekPrediction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="85"
                    android:isEnabled="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent Trends card (two small charts side-by-side) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:padding="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Recent Trends"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineRecentHydration"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineRecentFatigue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTrendNotes"
                    android:layout_marginTop="8dp"
                    android:text="• Consistent hydration improves sleep.\n• Morning walks reduce evening fatigue."
                    android:textSize="13sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
