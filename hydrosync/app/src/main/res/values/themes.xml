<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HydroSync" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSecondary">@color/brand_primary</item>

        <item name="android:colorBackground">@color/md_sys_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="bottomNavigationStyle">@style/Widget.HydroSync.BottomNav</item>
        <item name="materialCardViewStyle">@style/Widget.HydroSync.Card</item>

        <item name="android:statusBarColor">@color/md_sys_background</item>
        <item name="android:windowLightStatusBar">true</item> </style>

    <style name="Widget.HydroSync.Card" parent="Widget.Material3.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.HydroSync.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/nav_bg</item>
        <item name="itemIconTint">@drawable/nav_item_color_state</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
        <item name="elevation">8dp</item>
    </style>
</resources>